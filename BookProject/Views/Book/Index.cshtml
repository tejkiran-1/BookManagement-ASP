@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ConceptArchitect.BookManagement.Book>


@{
	Layout = "/Views/Shared/_Layout.cshtml";
}


<a asp-action="Add" asp-controller="Book" class='btn-secondary btn btn-sm float-right mt-3'>Add New</a>


<section class="featured-posts">

	<div class="section-title">

		<h2><span>Books</span></h2>

	</div>



	<div class="card-columns listfeaturedtag">



		@foreach (var book in Model)

		{

			<!-- begin post -->

			<div class="card">

				<div class="row">

					<div class="col-md-5 wrapthumbnail">

						<a href="BooksList.html">

							<div class="thumbnail" style="background-image: url(@book.Cover_Photo);">
							</div>

						</a>

					</div>

					<div class="col-md-7">

						<div class="card-block">

							<h2 class="card-title"><a href="@Url.Action("details", "book", new { id = book.Id })">@book.Title</a></h2>

							@*<h2 class="card-title"><a href="">@author.Name</a></h2>*@

							<h4 class="card-text">@book.Description</h4>

							<div class="metafooter">

								<div class="wrapfooter">

									<span class="meta-footer-thumb">

										<a href="book.html"><img class="author-thumb" src="@book.Cover_Photo;d=mm&amp;r=x" alt="@book.Title"></a>

									</span>

									<span class="author-meta">

										<span class="post-name"><a href="book.html">@book.Title</a></span><br />

									</span>

									<span class="post-read-more"><a href="ViewPage.html" title="My Favourites"><svg class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z" fill-rule="evenodd"></path></svg></a></span>
									<a asp-action="Update" asp-controller="Book" class='btn-secondary btn btn-sm float-right mt-3'>Update</a>
									<a asp-action="Delete" asp-route-id="@book.Id" class='btn-secondary btn btn-sm float-right mt-3'>Delete</a>

								</div>

							</div>

						</div>

					</div>

				</div>

			</div>



			<!-- end post -->
		}

	</div>

</section>


